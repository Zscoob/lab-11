<section class="book-container detail-view">
	<img src="<%= book.image_url %>">
	<h3>
		<%= book.title %><% if(book.subtitle){%>: <%= book.subtitle %> <% } %>
	</h3>
	<span>
		<%= book.author %>
	</span>
	<p class="desc">
		<%= book.description %>
	</p>
	<p class="isbn"><span id="isbnhide">
		<%= book.isbn %>
		<% if(book.bookshelf){ %>
			&mdash;
		</span>
			Bookshelf:
			<%= book.bookshelf %>
		<% } %>
	</p>
</section>